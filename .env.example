# Database (shared credentials, separate databases per service)
DB_USER=budget
DB_PASSWORD=budget

# API service database (docker-compose sets this automatically)
# DATABASE_URL=postgresql://budget:budget@postgres-api:5432/budget_api

# Notifications service database (docker-compose sets this automatically)
# DATABASE_URL=postgresql://budget:budget@postgres-notifications:5432/budget_notifications

# JWT
JWT_ACCESS_SECRET=your-access-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# RabbitMQ
RABBITMQ_URL=amqp://user:password@localhost:5672

# Telegram
TELEGRAM_BOT_TOKEN=your-bot-token

# Server
PORT=3000
NODE_ENV=development
